{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext"],
        "skipLibCheck": true,

        "jsx": "react-jsx",
        "jsxImportSource": "@kitajs/html",

        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true
    },
    "include": ["src"]
}
